<%= render StandardLayoutBoxComponent.new(title: @title) do |component| %>

  <% component.with_menu do %>
    <div class="dropdown record-show-wrapper_header-menu">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-gear-fill"></i> 
      </button>
      <ul class="dropdown-menu">
        <% @menu_options.each do |menu_option| %>
          <li>
            <%= link_to menu_option[:text], menu_option[:link], class: "dropdown-item", data: menu_option[:data] %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% component.with_body do %>
    <%= body %>
  <% end %>
<% end %>
