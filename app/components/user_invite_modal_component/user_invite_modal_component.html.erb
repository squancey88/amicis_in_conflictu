<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userInviteModal">
  Inivte User 
</button>

<div class="modal" tabindex="-1" id="userInviteModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Invite User to <%= @gaming_group.name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: invite_user_gaming_group_path(@gaming_group) do |form| %>
        <div class="modal-body">

          <div class="form-floating">
            <%= form.email_field :email, class: "form-control", placeholder: "Their email" %>
            <%= form.label :email %>
          </div>

          <div class="form-check">
            <%= form.check_box :owner, class: "form-check-input" %>
            <%= form.label :owner, 'Owner?', class: "form-check-label" %>
          </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= form.submit "Send Invite", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>