<% if @game.game_system.list_cost_change_in_game %>
  <div class="form-floating">
    <%= input_field_of_type("number", field_name(:list_cost_change), @game.game_system.list_cost_name,
      get_value(:list_cost_change)) %>
    <%= label_tag(field_name(:list_cost_change), @game.game_system.list_cost_name) %>
  </div>
<% end %>

<% @game.game_system.campaign_list_attributes.each do |attribute| %>
  <div class="form-floating">
    <%= input_field_of_type(attribute["type"], field_name(attribute["key"]), attribute["name"],
      get_value(attribute["key"])) %>
    <%= label_tag(field_name(attribute["key"]), attribute["name"]) %>
  </div>
<% end %>