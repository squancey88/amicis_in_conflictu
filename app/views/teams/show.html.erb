<div class="container">
  <div class="row">
    <div class="col">
      <%= render RecordShowWrapperComponent.new(
        record: @team,
        title: @team.name,
        menu_options: [
          { 
            text: "Edit",
            link: edit_gaming_group_team_path(@gaming_group, @team)
          },
          {
            text: "Delete",
            link: gaming_group_team_path(@gaming_group, @team),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          }
        ]
      ) do |component| %>

        <% component.with_body do %>

          <%= render @team %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>