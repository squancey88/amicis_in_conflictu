<%= form_with(model: army_list) do |form| %>

  <%= render RecordFormWrapperComponent.new(record: army_list, form:) do |component| %>

    <% component.with_form_box do %>
      <%= form.hidden_field :army_id %>

      <%= bootstrap_text_form(form, :name) %>

      <%= render GameSystems::CampaignAndArmySelectorComponent.new(form:) %>
    <% end %>

    <% component.with_form_box do %>
      <%= render TextEditorComponent.new(form:, attribute: :details) %>
    <% end %>
  <% end %>
<% end %>
