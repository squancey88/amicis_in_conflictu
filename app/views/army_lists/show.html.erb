<%= render RecordShowWrapperComponent.new(
  record: @army_list,
  title: @army_list.name,
  menu_options: [
    { 
      text: "Edit",
      link: edit_army_list_path(@army_list)
    },
    {
      text: "Delete",
      link: army_list_path(@army_list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    }
  ]
) do |component| %>

  <% component.with_box do %>
    <%= render @army_list %>
  <% end %>

  <% component.with_space do %>
    <%= render Units::ListComponent.new(army_list: @army_list) %>
  <% end %>

  <% component.with_space do %>
    <%= render EquipmentAttachments::ListComponent.new(army_list: @army_list) %>
  <% end %>
<% end %>