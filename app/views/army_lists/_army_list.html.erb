<p>
  <strong>Name:</strong>
  <%= army_list.name %>
</p>
<p>
  <strong>Remaining Cost:</strong>
  <%= army_list.remaining_cost %>
</p>
<p>
  <strong>Game System:</strong>
  <%= army_list.game_system.name %>
</p>

<p>
  <strong>Army:</strong>
  <%= army_list.army.name %>
</p>

<% if army_list.campaign %>
  <p>
    <strong>Campaign:</strong>
    <%= army_list.campaign&.name %>
  </p>
  
  <% army_list.game_gains.each do |key, value| %>
    <p>
      <strong><%= key %>:</strong>
      <%= value %>
    </p>
  <% end %>

<% end %>
