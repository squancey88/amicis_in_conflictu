<%= render RecordShowWrapperComponent.new(
  record: @gaming_group,
  title: @gaming_group.name,
  menu_options: [
    { 
      text: "Edit",
      link: edit_gaming_group_path(@gaming_group)
    },
  ]
) do |component| %>

  <% component.with_tab_section do |tab_section| %>

    <% tab_section.with_tab(label: "Sessions") do |tab| %>
      <% tab.with_grid_box do %>
        <%= render GroupSessionsOverviewComponent.new(gaming_group: @gaming_group) %>
      <% end %>

      <% tab.with_grid_box do %>
        <%= render LeagueTableComponent.new(gaming_group: @gaming_group) %>
      <% end %>
    <% end %>

    <% tab_section.with_tab(label: "Campaigns") do |tab| %>
      <%= render CampaignListComponent.new(gaming_group: @gaming_group) %>
    <% end %>

    <% tab_section.with_tab(label: "Members & Teams") do |tab| %>
      <% tab.with_grid_box do %>
        <%= render GamingGroupUserOverviewComponent.new(gaming_group: @gaming_group, current_user:) %>
      <% end %>

      <% tab.with_grid_box do %>
        <%= render GamingGroupTeamManagementComponent.new(gaming_group: @gaming_group, current_user:) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
