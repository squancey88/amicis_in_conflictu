<div class="container">
  <div class="p-3 text-center bg-body-tertiary rounded-3">
    <h1>Amicis In Conflictu</h1>
    <h2>Reset Password</h2>

    <%= form_with(url: auth_request_password_reset_path, html: { method: :post }) do |f| %>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
        <%= f.label :email %>
      </div>

      <div class="actions">
        <%= f.submit "Request Password Reset", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>