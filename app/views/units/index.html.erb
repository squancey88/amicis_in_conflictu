<% content_for :title, "Units" %>

<h1>Units</h1>

<div id="units">
  <%= turbo_frame_tag :unit_traits do %>
    <% @units.each do |unit| %>
      <%= render Common::CardWithMenuComponent.new(
        title: unit.name,
        subtitle: "Cost: #{unit.total_cost}",
        menu_options: [
        { 
          text: "Edit",
          link: edit_army_list_unit_path(unit.army_list, unit)
        },
        {
          text: "Clone",
          link: new_army_list_unit_path(unit.army_list, cloned_from_id: unit.id)
        }
        ]) do |card| %>
        <% card.with_body do %>
          <%= render Units::StatRowComponent.new(unit_stats: unit.unit_stats) %>
          <%= traits_list(unit) %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
