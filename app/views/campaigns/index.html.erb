<% content_for :title, "Campaigns" %>

<h1>Campaigns</h1>

<div id="campaigns">
  <% @campaigns.each do |campaign| %>
    <%= render Common::CardWithMenuComponent.new(title: campaign,
      menu_options: [
        {link: gaming_group_campaign_path(@gaming_group, campaign), text: "Show", target: "_top"},
        {link: edit_gaming_group_campaign_path(@gaming_group, campaign), text: "Edit", target: "_top"}
      ]) do |card| %>
      <%= render campaign %>
    <% end %>
  <% end %>
</div>

<%= link_to "New campaign", new_gaming_group_campaign_path(@gaming_group) %>