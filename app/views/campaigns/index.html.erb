<% content_for :title, "Campaigns" %>

<h1>Campaigns</h1>

<div id="campaigns">
  <% @campaigns.each do |campaign| %>
    <%= render campaign %>
    <p>
      <%= link_to "Show this campaign", gaming_group_campaign_path(@gaming_group, campaign) %>
    </p>
  <% end %>
</div>

<%= link_to "New campaign", new_gaming_group_campaign_path(@gaming_group) %>