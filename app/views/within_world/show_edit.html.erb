<% record = instance_variable_get(:"@#{controller_name.singularize}") %>

<%= form_with(model: [@world, record]) do |form| %>

  <%= render RecordFormWrapperComponent.new(record: record, form:) do |component| %>
    <% component.with_form_box do %>
      <%= render partial: "#{controller_name}/fields", locals: {form:} %>
    <% end %>
  <% end %>
<% end %>
