<% content_for :title, "Editing quest event" %>

<%= form_with(model: @quest_event, url: [@quest, @quest_event]) do |form| %>

  <%= render RecordFormWrapperComponent.new(record: @quest_event, form:) do |component| %>

    <% component.with_tab_section do |tab_section| %>

      <% tab_section.with_tab(label: "Overview") do |tab| %>

        <% tab.with_grid_box(title: "Details", as_box: true) do %>
          <%= bootstrap_text_field(form, :title) %>
        <% end %>

        <% tab.with_grid_box(title: "Blurb", as_box: true) do -%>
          <%= render TextEditorComponent.new(form:, attribute: :blurb) %>
        <% end %>
      <% end %>

      <% tab_section.with_tab(label: "Details") do |tab| %>
        <%= render Quests::Events::DetailsFormComponent.new(quest_event: @quest_event, form:) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>





