<div class="container">
  <div class="p-3 text-center bg-body-tertiary rounded-3">
    <h1>Amicis In Conflictu</h1>
    <h2>Register</h2>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <div class="form-floating mb-3">
        <%= f.text_field :firstname, class: "form-control", placeholder: "First name" %>
        <%= f.label :firstname %>
      </div>

      <div class="form-floating mb-3">
        <%= f.text_field :surname, class: "form-control", placeholder: "Surname" %>
        <%= f.label :surname %>
      </div>

      <% if f.object.class.require_password_on_accepting %>

        <div class="form-floating mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          <%= f.label :password %>
        </div>
        
        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
          <%= f.label :password_confirmation %>
        </div>
      <% end %>

      <div class="actions mt-2">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>