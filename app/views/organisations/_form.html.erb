<%= form_with(model: organisation, url: [@world, organisation]) do |form| %>

  <%= render RecordFormWrapperComponent.new(record: organisation, form:) do |component| %>

    <% component.with_form_box(title: "Details") do -%>
      <%= bootstrap_text_field(form, :name) %>
      <%= organisation_type_select(form, :organisation_type_id, @world) %>
    <% end %>

    <% component.with_form_box(title: "Description") do %>
      <%= render TextEditorComponent.new(form:, attribute: :description) %>
    <% end %>

    <% component.with_form_box(title: "History") do %>
      <%= render TextEditorComponent.new(form:, attribute: :history) %>
    <% end %>

    <% component.with_form_box(title: "Owner notes") do %>
      <%= render TextEditorComponent.new(form:, attribute: :world_owner_notes) %>
    <% end %>
  <% end %>
<% end %>
